<script id="report-create-template" type="text/x-handlers-template">
  <div class="Modal ReportCreate ReportCreate-{{report_type}}">
    <div class="nav-block Modal__nav">
      <button class="back-arrow"><i class="icon-back"></i></button>
      <h2 class="title"> I {{report_type}} a pet</h2>
      <div class="nav-trigger nav-trigger-white"><span></span><span></span><span></span></div>
    </div>
    <div class="section-wrapper Modal__container">
      <div class="progress-step ReportCreate__progress step-1">
        <div class="step-icon step-1 ReportCreate__progress-1">
          <div class="icon-photo-edit"></div>
        </div>
        <div class="devider step-2"></div>
        <div class="step-icon step-2 ReportCreate__progress-2">
          <div class="icon-location"></div>
        </div>
        <div class="devider step-3"></div>
        <div class="step-icon step-3 ReportCreate__progress-3">
          <div class="icon-fuzz-description"></div>
        </div>
      </div>
      <div class="ancete-wrapper step-1 ReportCreate__step">
        <div class="step-wrapper-1 ReportCreate__step-1">
          <h3 class="title">Snap a Photo</h3>
          <p class="description">Photos are the best way to identify a&nbsp;missing&nbsp;pet!</p>
          <div class="photo-wrapper wrapper-dog empty">
            <div class="form-group">
              <div class="preview-holder  ReportCreate__photo FullImage">
                {{#if image}}
                <img src="{{image}}" class="FullImage-img"/>
                {{else}}
                <img src="<%= asset_url('wrapper-dog.png') %>" class="FullImage-img"/>
                {{/if}}
                <i class="icon-photo-edit"></i>
              </div>

              <label class="Uploader {{photo_title_class}}">
                <span>{{photo_title}}</span>
                <input type="file" name="image" ref="upload" class="ReportCreate-input Uploader-input"/>
              </label>

              <button class="btn btn-big ReportCreate__next ReportCreate__next-photo {{photo_continue_class}}">{{photo_continue}}</button>
            </div>
          </div>
        </div>
        <div class="step-wrapper-2 ReportCreate__step-2">
          <h3 class="title">Enter last known location</h3>
          <div class="form-group empty">
            <input placeholder="Type address here" name="address" value="{{address}}" class="input form-control ReportCreate-input ReportCreate-address"/>
            <p class="description">Or drag map pin to location</p>
            <div class="map ReportCreate__map"></div>
            <button class="btn btn-big btn-green  ReportCreate__next ReportCreate__next-location">Use current location</button>
          </div>
        </div>
        <div class="step-wrapper-3 ReportCreate__step-3">
          <h3 class="title">Describe the pet</h3>
          <form class="Pet-description">
            <div class="form-group">
              <div class="Select">
                <select name="animal_type" class="Select-input ReportCreate-input" placeholder="Pet type">
                  <option value="" {{#if isAninalDef}} selected="selected" {{/if}}>Pet type</option>
                  <option value="dog" {{#if isAninalDog}} selected="selected" {{/if}}>Dog</option>
                  <option value="cat" {{#if isAninalCat}} selected="selected" {{/if}}>Cat</option>
                  <option value="bird" {{#if isAninalBird}} selected="selected" {{/if}}>Bird</option>
                  <option value="other" {{#if isAninalOther}} selected="selected" {{/if}}>Other</option>
                </select>
              </div>
            </div>
            <div class="form-group">
              <input placeholder="Pet name" name="pet_name" value="{{pet_name}}" class="input input-small form-control  ReportCreate-input"/>
            </div>
            <div class="form-group">
              <div class="Select">
                <select class="Select-input ReportCreate-lastSelect" placeholder="Last seen">
                  <option value="">Last seen</option>
                  <option value="0">&nbsp;&nbsp;just now</option>
                  <option value="1">&nbsp;&nbsp;1 hour ago</option>
                  <option value="2">&nbsp;&nbsp;2 hours ago</option>
                  <option value="12">12 hours ago</option>
                  <option value="24">24 hours ago</option>
                  <option value="48">48 hours ago</option>
                  <option value="custom">custom date/time</option>
                </select>
              </div>
            </div>
            <div class="form-group">
              <input placeholder="MM/DD HH:mm AM/PM" value="{{last_seen}}" type="{{last_seen_type}}" name="last_seen" class="input input-small form-control  ReportCreate-input ReportCreate-lastSeen"/>
            </div>
            <div class="form-group">
              <textarea name="notes" placeholder="Briefly describe the incident" value="{{notes}}" rows="4" class="textarea form-control ReportCreate-input"></textarea>
            </div>
            <button type="button" class="btn btn-big btn-green ReportCreate__toggleDetails">
              <i class="icon-plus"></i>Add Pet Details
            </button>
            <div class="extra-area ReportCreate__details">
              <div class="row">
                <div class="col-xs-6">
                  <div class="Select">
                    <select class="Select-input ReportCreate-input" name="gender" placeholder="Gender">
                      <option value="">Gender</option>
                      <option value="male" {{#if isGenderMale}} selected="selected" {{/if}}>Male</option>
                      <option value="female" {{#if isGenderFemale}} selected="selected" {{/if}}>Female</option>
                    </select>
                  </div>
                </div>
                <div class="col-xs-6">
                  <div class="Select">
                    <select class="Select-input ReportCreate-input" name="size" placeholder="Size">
                      <option value="">Size</option>
                      <option value="small" {{#if isSizeSmall}} selected="selected" {{/if}}>Small</option>
                      <option value="medium" {{#if isSizeMedium}} selected="selected" {{/if}}>Medium</option>
                      <option value="large" {{#if isSizeLarge}} selected="selected" {{/if}}>Large</option>
                    </select>
                  </div>
                </div>
              </div>
              <div class="row">
                <div class="col-xs-6">
                  <div class="Select">
                    <select class="Select-input ReportCreate-input" name="age" placeholder="Age">
                      <option value="">Age</option>
                      <option value="baby" {{#if isAgeBaby}} selected="selected" {{/if}}>Baby</option>
                      <option value="young" {{#if isAgeYoung}} selected="selected" {{/if}}>Young</option>
                      <option value="adult" {{#if isAgeAdult}} selected="selected" {{/if}}>Adult</option>
                      <option value="senior" {{#if isAgeSenior}} selected="selected" {{/if}}>Senior</option>
                    </select>
                  </div>
                </div>
                <div class="col-xs-6">
                  <input placeholder="Pet color" name="color" value="{{color}}" class="input input-small form-control ReportCreate-input"/>
                </div>
              </div>
              <div class="row">
                <div class="col-xs-12">
                  <input placeholder="Pet Breed" name="breed" value="{{breed}}" class="input input-small form-control ReportCreate-input"/>
                </div>
              </div>
              <div class="row">
                <div class="col-xs-12">
                  <input placeholder="Additional keywords" name="tag_list" value="{{tag_list}}" class="input input-small form-control ReportCreate-input"/>
                </div>
              </div>
            </div>
            <button type="button" class="btn btn-big btn-blue ReportCreate-submit">Post FuzzAlert</button>
          </form>
        </div>
      </div>
    </div>
  </div>
</script>
